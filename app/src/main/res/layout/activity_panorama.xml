<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgrey"
    tools:context=".result.Panorama">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Your Best Experience Start From Here"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/editText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/editText"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="@drawable/border"
        android:gravity="center"
        android:hint="Try to choose panorama ?\n Your favorite !"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/Perkotaan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/Perkotaan"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/darkgrey"
        android:fontFamily="@font/roboto_reguler"
        android:text="Urban"
        android:textColor="@color/lightgrey"
        app:layout_constraintBottom_toTopOf="@+id/Pantai"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/Pantai"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/darkgrey"
        android:fontFamily="@font/roboto_reguler"
        android:text="Beach"
        android:textColor="@color/lightgrey"
        app:layout_constraintBottom_toTopOf="@+id/Gunung"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Perkotaan"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/airterjun"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/darkgrey"
        android:fontFamily="@font/roboto_reguler"
        android:text="River / Waterfall"
        android:textColor="@color/lightgrey"
        app:layout_constraintBottom_toTopOf="@+id/Perkebunan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Gunung"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/Perkebunan"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/darkgrey"
        android:fontFamily="@font/roboto_reguler"
        android:text="Rice Field / Estate"
        android:textColor="@color/lightgrey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/airterjun"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/Gunung"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/darkgrey"
        android:fontFamily="@font/roboto_reguler"
        android:text="Gunung"
        android:textColor="@color/lightgrey"
        app:layout_constraintBottom_toTopOf="@+id/airterjun"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Pantai"
        app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>